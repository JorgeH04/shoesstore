<% include ../partials/_header %>


<div class="col-md-4 mx-auto">
    <div class="card text-center">
      <div class="card-header">
        <h3>Agregue un nuevo producto</h3>
      </div>
      <div class="card-body">
        <form action="/ofertatres/new-ofertatres" method="POST">



          <div class="form-group">
              <input type="text" name="name" class="form-control" placeholder="name" value="<%= ofertatres.name %>"  autofocus/>
            </div>
           <div class="form-group">
              <input type="text" name="title" class="form-control" placeholder="title" value="<%= ofertatres.title %>" autofocus/>
            </div>
            <div class="form-group">
                <input type="text" name="image" class="form-control" placeholder="imagen 1" value="<%= ofertatres.image %>" autofocus/>
              </div>
              <div class="form-group">
                <input type="text" name="imagedos" class="form-control" placeholder="imagen 2" value="<%= ofertatres.imagedos %>" autofocus/>
              </div>
              <div class="form-group">
                <input type="text" name="imagetres" class="form-control" placeholder="imagen 3" value="<%= ofertatres.imagetres %>" autofocus/>
              </div>
              <div class="form-group">
                <input type="text" name="description" class="form-control" placeholder="descripcion" value="<%= ofertatres.description %>" autofocus/>
              </div>
              <div class="form-group">
                <input type="text" name="price" class="form-control" placeholder="precio" value="<%= ofertatres.price %>" autofocus/>
              </div>
              <div class="form-group">
                  <input type="text" name="color" class="form-control" placeholder="color" value="<%= ofertatres.color %>" autofocus/>
              </div>
              <div class="form-group">
                    <input type="text" name="colorstock" class="form-control" placeholder="colorstock" value="<%= ofertatres.colorstock %>" autofocus/>
              </div>
              <div class="form-group">
                  <input type="text" name="talle" class="form-control" placeholder="talle" value="<%= ofertatres.talle %>" autofocus/>
             </div>
             <div class="form-group">
                <input type="text" name="tallestock" class="form-control" placeholder="tallestock" value="<%= ofertatres.tallestock %>" autofocus/>
              </div>
              <div class="form-group">
                  <input type="text" name="filtroprice" class="form-control" placeholder="filtro de precio" value="<%= ofertatres.filtroprice %>"autofocus/>
              </div>
  

                   
          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
              Save
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  
    
  <div class="col-12">
      <!-- Main Content -->
      <main class="row">
    
          <!-- Category Products -->
          <div class="col-12">
              <div class="row">
                  <div class="col-12 py-3">
                      <div class="row">
                          <div class="col-12 text-center text-uppercase">
                              <h2>Computers</h2>
                          </div>
                      </div>
                      <div class="row">
                            <% ofertatres.forEach(function (ofertatre) { %>
    
                          <!-- Product -->
                          <div class="col-xl-2 col-lg-3 col-sm-6 my-3">
                              <div class="col-12 bg-white text-center h-100 product-item">
                                  <div class="row h-100">
                                      <div class="col-12 p-0 mb-3">
                                          <a href="/ofertatresredirect/<%= ofertatre.id %>">
                                              <img src="<%= ofertatre.image %>" class="img-fluid">
                                          </a>
                                      </div>
                                      <div class="col-12 mb-3">
                                            <%= ofertatre.title %> 
                                      </div>
                                      <div class="col-12 mb-3">
                                              <span class="product-price-old">
                                                  $<%= ofertatre.price %> 
                                              </span>
                                          
                                      </div>
                                   
                                    <a class="btnn btn-danger" href="/ofertatres/delete/<%= ofertatre.id %>">
                                      Eliminar
                                  </a>
                                  <br>
                                  <a class="btnn btn-primary" href="/ofertatres/edit/<%= ofertatre.id %>">
                                      Editar
                                  </a>
                                  </div>
                              </div>
                          </div>
                          <!-- Product -->
                          <% }) %>
    
                      </div>
                  </div>
              </div>
          </div>
          <!-- Category Products -->


 <% include ../partials/_footer %>
        
        

  


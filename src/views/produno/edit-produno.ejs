<% include ../partials/_header %>



<div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        <h3>Edite su producto</h3>
      </div>
      <div class="card-body">
        <form action="/produno/edit/<%= produno._id %>" method="POST">
          <input type="hidden" name="_method" value="PUT">
         

          <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="name" value="<%= produno.name %>"  autofocus/>
          </div>
         <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="title" value="<%= produno.title %>" autofocus/>
          </div>
          <div class="form-group">
              <input type="text" name="image" class="form-control" placeholder="imagen 1" value="<%= produno.image %>" autofocus/>
            </div>
            <div class="form-group">
              <input type="text" name="imagedos" class="form-control" placeholder="imagen 2" value="<%= produno.imagedos %>" autofocus/>
            </div>
            <div class="form-group">
              <input type="text" name="imagetres" class="form-control" placeholder="imagen 3" value="<%= produno.imagetres %>" autofocus/>
            </div>
            <div class="form-group">
              <input type="text" name="description" class="form-control" placeholder="descripcion" value="<%= produno.description %>" autofocus/>
            </div>
            <div class="form-group">
              <input type="text" name="price" class="form-control" placeholder="precio" value="<%= produno.price %>" autofocus/>
            </div>
            <div class="form-group">
                <input type="text" name="color" class="form-control" placeholder="color" value="<%= produno.color %>" autofocus/>
            </div>
            <div class="form-group">
                  <input type="text" name="colorstock" class="form-control" placeholder="colorstock" value="<%= produno.colorstock %>" autofocus/>
            </div>
            <div class="form-group">
                <input type="text" name="talle" class="form-control" placeholder="talle" value="<%= produno.talle %>" autofocus/>
           </div>
           <div class="form-group">
              <input type="text" name="tallestock" class="form-control" placeholder="tallestock" value="<%= produno.tallestock %>" autofocus/>
            </div>
            <div class="form-group">
                <input type="text" name="filtroprice" class="form-control" placeholder="filtro de precio" value="<%= produno.filtroprice %>"autofocus/>
            </div>


          <div class="form-group">
            <button class="btnn btn-primary btn-block" type="submit">
              Guardar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>






<% include ../partials/_footer %>

<% include ../partials/_header %>


        <!-- Breadcrumb area Start -->
        <section class="page-title-area bg-image ptb--80" data-bg-image="assets/img/bg/banner.jpg">
          <div class="container">
              <div class="row">
                  <div class="col-12 text-center">
                      <h1 class="page-title">Register</h1>
                      <ul class="breadcrumb">
                          <li><a href="index.html">Home</a></li>
                          <li class="current"><span>Register</span></li>
                      </ul>
                  </div>
              </div>
          </div>
      </section>
      <!-- Breadcrumb area End -->

      <!-- Main Content Wrapper Start -->
      <div class="main-content-wrapper">
          <div class="page-content-inner pt--75 pb--80">
              <div class="container">
                  <div class="row">
                      <div class="col-md-6 mb-sm--50">
                          <div class="login-box">
                              <h3 class="heading__tertiary mb--30">Register Account</h3>
                              <form action="/users/signup" method="POST"
                                  class="form form--login" >
                                  <div class="form__group mb--20">
                                      <label class="form__label" for="email">Nombre <span
                                              class="required">*</span></label>
                                      <input type="name" class="form__input" name="name"  id="email"
                                            ng-required="true">
                                      <span class="waw"
                                          ng-show="registerForm.email.$touched && registerForm.email.$error.email">Ingrese su nombre y apellido.</span><br /><br />
                                  </div>


                                  <div class="form__group mb--20">
                                      <label class="form__label" for="register_password">Email <span
                                              class="required">*</span></label>
                                      <input type="email" class="form__input" name="email" id="register_password"
                                           >
                                      <span class="waw"
                                        ng-show="registerForm.email.$touched && registerForm.email.$error.email">Ingrese un email válido.</span><br /><br />
                                  </div>

                                  <div class="form__group mb--20">
                                      <label class="form__label" for="register_password">Password <span
                                              class="required">*</span></label>
                                      <input type="password" class="form__input" id="register_password"
                                            name="password"  >
                                      <span class="waw"
                                          ng-show="registerForm.register_password.$touched && registerForm.register_password.$error.minlength ">
                                          </span><br /><br />
                                  </div>

                                  <div class="form__group mb--20">
                                      <label class="form__label" for="register_password">Confirmar Password <span
                                              class="required">*</span></label>
                                      <input type="password" class="form__input" id="register_password"
                                      name="confirm_password" >
                                      <span class="waw"
                                          ng-show="registerForm.register_password.$touched && registerForm.register_password.$error.minlength ">
                                          </span><br /><br />
                                  </div>


                                  


                                  <div class="form__group mb--20">
                                      <label class="form__label" for="register_password">Teléfono <span
                                              class="required">*</span></label>
                                      <input type="text" class="form__input" id="register_password"
                                      name="number" >
                                      <span class="waw"
                                          ng-show="registerForm.register_password.$touched && registerForm.register_password.$error.minlength ">
                                          </span><br /><br />
                                  </div>


                                  <div class="form__group mb--20">
                                      <label class="form__label" for="register_password">Dirección y Localidad <span
                                              class="required">*</span></label>
                                      <input type="text" class="form__input" id="register_password"
                                         name="address" >
                                      <span class="waw"
                                          ng-show="registerForm.register_password.$touched && registerForm.register_password.$error.minlength "> </span><br /><br />
                                  </div>
                                  <p class="privacy-text mb--20">Your personal data will be used to support your
                                      experience throughout this website, to manage access to your account, and for
                                      other purposes described in our privacy policy.</p>
                                  <div class="form__group">
                                      <button  class="btn btn-size-sm">
                                          Registrarse
                                      </button>
                                  </div>
                              </form>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
      <!-- Main Content Wrapper Start -->


  <% include ../partials/_footer %>
